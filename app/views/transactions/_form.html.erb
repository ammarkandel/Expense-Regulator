<%= simple_form_for(@transaction) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, required: true, input_html: { class: 'form-control' }, label_html: { class: 'text-dark h4' } %>
      <%= f.input :amount,required: true, input_html: { class: 'form-control' }, label_html: { class: 'text-dark h4' } %>
      <%= f.association :group, required: false, include_blank: "", input_html: { class: 'form-control' }, label_html: { class: 'text-dark h4' } %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-success btn-block' %>
    </div>
<% end %>